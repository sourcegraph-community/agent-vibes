{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "typecheck": "tsc -p . --noEmit",
    "typecheck:watch": "tsc -p . --noEmit --watch --preserveWatchOutput",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --cache",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix --cache",
    "check": "npm run typecheck && npm run lint",
    "fix": "npm run lint:fix",
    "check:fix": "npm run typecheck && npm run lint:fix",
    "sentiment": "npx tsx scripts/analyze-sentiment.ts",
    "setup": "./scripts/local-setup.sh",
    "adapters:rss": "npx tsx lib/adapters/rss/rss-adapter.ts",
    "test-rss": "node scripts/test-rss-only.js",
    "test-ingestion": "curl -X POST http://localhost:3000/api/entries",
    "test-notify": "curl -X POST http://localhost:3000/api/notifications/test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:dashboard": "playwright test tests/dashboard.spec.ts",
    "test:dashboard:headed": "playwright test tests/dashboard.spec.ts --headed",
    "test:update-screenshots": "playwright test --update-snapshots"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@knocklabs/client": "^0.18.0",
    "@knocklabs/node": "^1.16.0",
    "@prisma/client": "^6.16.2",
    "@supabase/supabase-js": "^2.57.4",
    "apify-client": "^2.17.0",
    "cheerio": "^1.1.2",
    "jsdom": "^27.0.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.2",
    "node-fetch": "^3.3.2",
    "prisma": "^6.16.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rss-parser": "^3.13.0",
    "sentiment": "^5.0.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@playwright/test": "^1.55.0",
    "@stylistic/eslint-plugin": "^2",
    "@tailwindcss/postcss": "^4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^5",
    "globals": "^15",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "typescript-eslint": "^8"
  }
}
